<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/country_row_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/country_horizontal_padding"
    android:paddingRight="@dimen/country_horizontal_padding"
    android:background="@drawable/country_row">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/country_text"
        android:textSize="@dimen/country_name_size"
        tools:text="Afghanistan"/>

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/country_code_horizontal_padding"
        android:paddingRight="@dimen/country_code_horizontal_padding"
        android:textColor="@color/country_text"
        android:textSize="@dimen/country_code_size"
        tools:text="+44 1534"/>

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        tools:src="@drawable/country_flag_ad"/>
</LinearLayout>